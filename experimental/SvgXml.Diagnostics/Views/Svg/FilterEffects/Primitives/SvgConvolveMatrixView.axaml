<UserControl x:Class="SvgXml.Diagnostics.Views.Svg.FilterEffects.SvgConvolveMatrixView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:attributesviews="using:SvgXml.Diagnostics.Views.Svg.Attributes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl Margin="2">
        <TabItem Header="ConvolveMatrix">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- X -->
                    <TextBlock Text="X" Grid.Row="0" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding X}" Grid.Row="0" Grid.Column="1" Margin="2" />
                    <!-- Y -->
                    <TextBlock Text="Y" Grid.Row="1" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Y}" Grid.Row="1" Grid.Column="1" Margin="2" />
                    <!-- Width -->
                    <TextBlock Text="Width" Grid.Row="2" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Width}" Grid.Row="2" Grid.Column="1" Margin="2" />
                    <!-- Height -->
                    <TextBlock Text="Height" Grid.Row="3" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Height}" Grid.Row="3" Grid.Column="1" Margin="2" />
                    <!-- Result -->
                    <TextBlock Text="Result" Grid.Row="4" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Result}" Grid.Row="4" Grid.Column="1" Margin="2" />
                    <!-- Input -->
                    <TextBlock Text="Input" Grid.Row="5" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Input}" Grid.Row="5" Grid.Column="1" Margin="2" />
                    <!-- Order -->
                    <TextBlock Text="Order" Grid.Row="6" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Order}" Grid.Row="6" Grid.Column="1" Margin="2" />
                    <!-- KernelMatrix -->
                    <TextBlock Text="KernelMatrix" Grid.Row="7" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding KernelMatrix}" Grid.Row="7" Grid.Column="1" Margin="2" />
                    <!-- Divisor -->
                    <TextBlock Text="Divisor" Grid.Row="8" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Divisor}" Grid.Row="8" Grid.Column="1" Margin="2" />
                    <!-- Bias -->
                    <TextBlock Text="Bias" Grid.Row="9" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Bias}" Grid.Row="9" Grid.Column="1" Margin="2" />
                    <!-- TargetX -->
                    <TextBlock Text="TargetX" Grid.Row="10" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding TargetX}" Grid.Row="10" Grid.Column="1" Margin="2" />
                    <!-- TargetY -->
                    <TextBlock Text="TargetY" Grid.Row="11" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding TargetY}" Grid.Row="11" Grid.Column="1" Margin="2" />
                    <!-- EdgeMode -->
                    <TextBlock Text="EdgeMode" Grid.Row="12" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding EdgeMode}" Grid.Row="12" Grid.Column="1" Margin="2" />
                    <!-- KernelUnitLength -->
                    <TextBlock Text="KernelUnitLength" Grid.Row="13" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding KernelUnitLength}" Grid.Row="13" Grid.Column="1" Margin="2" />
                    <!-- PreserveAlpha -->
                    <TextBlock Text="PreserveAlpha" Grid.Row="14" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding PreserveAlpha}" Grid.Row="14" Grid.Column="1" Margin="2" />
                </Grid>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Common">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <attributesviews:CommonProperties/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Presentation">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <attributesviews:PresentationProperties/>
            </ScrollViewer>
        </TabItem>
        <TabItem Header="Stylable">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <attributesviews:StylableProperties/>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
