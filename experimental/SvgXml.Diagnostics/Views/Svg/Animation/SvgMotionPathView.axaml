<UserControl x:Class="SvgXml.Diagnostics.Views.Svg.SvgMotionPathView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:attributesviews="using:SvgXml.Diagnostics.Views.Svg.Attributes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="2">
        <Expander IsExpanded="True" Header="MotionPath">
            <Grid Margin="2" ColumnDefinitions="Auto,*" RowDefinitions="Auto">
                <!-- Href -->
                <TextBlock Text="Href" Grid.Row="0" Grid.Column="0" Margin="2" />
                <TextBox Text="{Binding Href}" Grid.Row="0" Grid.Column="1" Margin="2" />
            </Grid>
        </Expander>
        <Expander IsExpanded="True" Header="Common">
            <attributesviews:CommonProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Resources">
            <attributesviews:ResourcesProperties />
        </Expander>
    </StackPanel>
</UserControl>
