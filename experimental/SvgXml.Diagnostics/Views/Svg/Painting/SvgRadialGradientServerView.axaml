<UserControl x:Class="SvgXml.Diagnostics.Views.Svg.SvgRadialGradientServerView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:attributesviews="using:SvgXml.Diagnostics.Views.Svg.Attributes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Expander IsExpanded="True" Header="RadialGradientServer">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="KeyColumn"/>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                </Grid.ColumnDefinitions>
                <!-- CenterX -->
                <TextBlock Text="CenterX" Grid.Row="0" Grid.Column="0" />
                <TextBox Text="{Binding CenterX}" Grid.Row="0" Grid.Column="1" />
                <!-- CenterY -->
                <TextBlock Text="CenterY" Grid.Row="1" Grid.Column="0" />
                <TextBox Text="{Binding CenterY}" Grid.Row="1" Grid.Column="1" />
                <!-- Radius -->
                <TextBlock Text="Radius" Grid.Row="2" Grid.Column="0" />
                <TextBox Text="{Binding Radius}" Grid.Row="2" Grid.Column="1" />
                <!-- FocalX -->
                <TextBlock Text="FocalX" Grid.Row="3" Grid.Column="0" />
                <TextBox Text="{Binding FocalX}" Grid.Row="3" Grid.Column="1" />
                <!-- FocalY -->
                <TextBlock Text="FocalY" Grid.Row="4" Grid.Column="0" />
                <TextBox Text="{Binding FocalY}" Grid.Row="4" Grid.Column="1" />
                <!-- GradientUnits -->
                <TextBlock Text="GradientUnits" Grid.Row="5" Grid.Column="0" />
                <TextBox Text="{Binding GradientUnits}" Grid.Row="5" Grid.Column="1" />
                <!-- GradientTransform -->
                <TextBlock Text="GradientTransform" Grid.Row="6" Grid.Column="0" />
                <TextBox Text="{Binding GradientTransform}" Grid.Row="6" Grid.Column="1" />
                <!-- SpreadMethod -->
                <TextBlock Text="SpreadMethod" Grid.Row="7" Grid.Column="0" />
                <TextBox Text="{Binding SpreadMethod}" Grid.Row="7" Grid.Column="1" />
                <!-- Href -->
                <TextBlock Text="Href" Grid.Row="8" Grid.Column="0" />
                <TextBox Text="{Binding Href}" Grid.Row="8" Grid.Column="1" />
            </Grid>
        </Expander>
        <Expander IsExpanded="True" Header="Common">
            <attributesviews:CommonProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Presentation">
            <attributesviews:PresentationProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Stylable">
            <attributesviews:StylableProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Resources">
            <attributesviews:ResourcesProperties />
        </Expander>
    </StackPanel>
</UserControl>
