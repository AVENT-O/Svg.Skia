<UserControl x:Class="SvgXml.Diagnostics.Views.Svg.SvgImageView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:attributesviews="using:SvgXml.Diagnostics.Views.Svg.Attributes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Expander IsExpanded="True" Header="Image">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="KeyColumn"/>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
                </Grid.ColumnDefinitions>
                <!-- AspectRatio -->
                <TextBlock Text="AspectRatio" Grid.Row="0" Grid.Column="0" />
                <TextBox Text="{Binding AspectRatio}" Grid.Row="0" Grid.Column="1" />
                <!-- X -->
                <TextBlock Text="X" Grid.Row="1" Grid.Column="0" />
                <TextBox Text="{Binding X}" Grid.Row="1" Grid.Column="1" />
                <!-- Y -->
                <TextBlock Text="Y" Grid.Row="2" Grid.Column="0" />
                <TextBox Text="{Binding Y}" Grid.Row="2" Grid.Column="1" />
                <!-- Width -->
                <TextBlock Text="Width" Grid.Row="3" Grid.Column="0" />
                <TextBox Text="{Binding Width}" Grid.Row="3" Grid.Column="1" />
                <!-- Height -->
                <TextBlock Text="Height" Grid.Row="4" Grid.Column="0" />
                <TextBox Text="{Binding Height}" Grid.Row="4" Grid.Column="1" />
                <!-- Href -->
                <TextBlock Text="Href" Grid.Row="5" Grid.Column="0" />
                <TextBox Text="{Binding Href}" Grid.Row="5" Grid.Column="1" />
            </Grid>
        </Expander>
        <Expander IsExpanded="True" Header="Common">
            <attributesviews:CommonProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Presentation">
            <attributesviews:PresentationProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Tests">
            <attributesviews:TestsProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Stylable">
            <attributesviews:StylableProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Resources">
            <attributesviews:ResourcesProperties />
        </Expander>
        <Expander IsExpanded="True" Header="Transformable">
            <attributesviews:TransformableProperties />
        </Expander>
    </StackPanel>
</UserControl>
