<UserControl x:Class="SvgXml.Diagnostics.Views.Svg.Attributes.AnimationAdditionProperties"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid RowDefinitions="Auto,Auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="KeyColumn"/>
            <ColumnDefinition Width="Auto" SharedSizeGroup="ValueColumn"/>
        </Grid.ColumnDefinitions>
        <!-- Additive -->
        <TextBlock Text="Additive" Grid.Row="0" Grid.Column="0" />
        <TextBox Text="{Binding Additive}" Grid.Row="0" Grid.Column="1" />
        <!-- Accumulate -->
        <TextBlock Text="Accumulate" Grid.Row="1" Grid.Column="0" />
        <TextBox Text="{Binding Accumulate}" Grid.Row="1" Grid.Column="1" />
    </Grid>
</UserControl>
