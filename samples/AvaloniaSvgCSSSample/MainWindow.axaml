<Window
    x:Class="AvaloniaSvgCSSSample.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
    Title="Avalonia SgvImage Sample"
    Width="900"
    Height="600"
    d:DesignHeight="600"
    d:DesignWidth="900"
    UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <Button x:Name="ApplyButton">Apply SVG Palette</Button>
        <TextBlock>Hover mouse on a tiger to apply SVG palette for hover state</TextBlock>
        <Panel
            Margin="16"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Button Background="Transparent" Content="{SvgImage /Assets/__tiger.svg}">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="svg:Svg.CSSCurrent" Value=".Black { fill: #FF0000; }" />
                    </Style>
                </Button.Styles>
            </Button>
        </Panel>
    </StackPanel>
</Window>
