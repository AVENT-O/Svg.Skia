<UserControl x:Class="SvgXml.Diagnostics.Views.Xml.ContentElementView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SvgXml.Diagnostics.Views.Xml;assembly=SvgXml.Diagnostics"
             xmlns:Xml="clr-namespace:Xml;assembly=SvgXml.Xml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl Margin="2">
        <TabItem Header="Content">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <!-- Content -->
                    <TextBlock Text="Content" Grid.Row="0" Grid.Column="0" Margin="2" />
                    <TextBox Text="{Binding Content}" Grid.Row="0" Grid.Column="1" Margin="2" />
                </Grid>
            </ScrollViewer>
        </TabItem>
    </TabControl>
</UserControl>
