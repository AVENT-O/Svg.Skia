<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>netstandard2.0;netstandard2.1;netcoreapp2.2;netcoreapp3.0;net452;net461</TargetFrameworks>
    <EnableDefaultCompileItems>False</EnableDefaultCompileItems>
    <EnableDefaultItems>False</EnableDefaultItems>
    <NoWarn>CS1591</NoWarn>
    <IsPackable>True</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <Description>An SVG rendering library.</Description>
    <PackageId>Svg.Skia</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>svg;vector graphics;rendering;2d;graphics;geometry;shapes;skiasharp;skia</PackageTags>
  </PropertyGroup>

  <Import Project="..\..\build\Base.props" />
  <Import Project="..\..\build\ReferenceAssemblies.props" />
  <Import Project="..\..\build\SkiaSharp.props" />

  <!-- Use Svg from NuGet -->
  <Import Project="..\..\build\Svg.props" />

  <!-- Use Svg from externals/SVG -->
  <!--<ItemGroup>
    <ProjectReference Include="..\..\externals\SVG\Source\Svg.csproj" />
  </ItemGroup>-->

  <!-- Use Svg custom build -->
  <!--<PropertyGroup>
    <DefineConstants>$(DefineConstants);USE_NEW_FILTERS</DefineConstants>
    <DefineConstants>$(DefineConstants);USE_NEW_STDDEVIATION</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Svg.Custom\Svg.Custom.csproj" />
  </ItemGroup>-->

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="obj\**" />
  </ItemGroup>

</Project>
