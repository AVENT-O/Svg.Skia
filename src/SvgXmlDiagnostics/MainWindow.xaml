                                            <TextBox Text="{Binding Y}" Grid.Row="3" Grid.Column="1" Margin="2" />
                                            <!-- Dx -->
                                            <TextBlock Text="Dx" Grid.Row="4" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Dx}" Grid.Row="4" Grid.Column="1" Margin="2" />
                                            <!-- Dy -->
                                            <TextBlock Text="Dy" Grid.Row="5" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Dy}" Grid.Row="5" Grid.Column="1" Margin="2" />
                                            <!-- Rotate -->
                                            <TextBlock Text="Rotate" Grid.Row="6" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Rotate}" Grid.Row="6" Grid.Column="1" Margin="2" />
                                        </Grid>
                                    </DataTemplate>
                                    <DataTemplate DataType="{x:Type Svg:SvgVerticalKern}">
                                        <Grid Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <!-- Unicode1 -->
                                            <TextBlock Text="Unicode1" Grid.Row="0" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Unicode1}" Grid.Row="0" Grid.Column="1" Margin="2" />
                                            <!-- Glyph1 -->
                                            <TextBlock Text="Glyph1" Grid.Row="1" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Glyph1}" Grid.Row="1" Grid.Column="1" Margin="2" />
                                            <!-- Unicode2 -->
                                            <TextBlock Text="Unicode2" Grid.Row="2" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Unicode2}" Grid.Row="2" Grid.Column="1" Margin="2" />
                                            <!-- Glyph2 -->
                                            <TextBlock Text="Glyph2" Grid.Row="3" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Glyph2}" Grid.Row="3" Grid.Column="1" Margin="2" />
                                            <!-- Kerning -->
                                            <TextBlock Text="Kerning" Grid.Row="4" Grid.Column="0" Margin="2" />
                                            <TextBox Text="{Binding Kerning}" Grid.Row="4" Grid.Column="1" Margin="2" />
                                        </Grid>
                                    </DataTemplate>
                                </ContentControl.Resources>
                            </ContentControl>
                        </ScrollViewer>
                    </TabItem>
                    <TabItem Header="Common" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgCommonAttributes}}">
                        <attributes:CommonProperties/>
                    </TabItem>
                    <TabItem Header="Presentation" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgPresentationAttributes}}">
                        <attributes:PresentationProperties/>
                    </TabItem>
                    <TabItem Header="Resources" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgResourcesAttributes}}">
                        <attributes:ResourcesProperties/>
                    </TabItem>
                    <TabItem Header="Stylable" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgStylableAttributes}}">
                        <attributes:StylableProperties/>
                    </TabItem>
                    <TabItem Header="Tests" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgTestsAttributes}}">
                        <attributes:TestsProperties/>
                    </TabItem>
                    <TabItem Header="Transformable" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgTransformableAttributes}}">
                        <attributes:TransformableProperties/>
                    </TabItem>
                    <TabItem Header="XLink" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgXLinkAttributes}}">
                        <attributes:XLinkProperties/>
                    </TabItem>
                    <TabItem Header="Animation" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:SvgAnimationElement}}">
                        <TabControl>
                            <TabItem Header="Addition" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgAnimationAdditionAttributes}}">
                                <attributes:AnimationAdditionProperties/>
                            </TabItem>
                            <TabItem Header="Attribute Target" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgAnimationAttributeTargetAttributes}}">
                                <attributes:AnimationAttributeTargetProperties/>
                            </TabItem>
                            <TabItem Header="Event" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgAnimationEventAttributes}}">
                                <attributes:AnimationEventProperties/>
                            </TabItem>
                            <TabItem Header="Timing" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgAnimationTimingAttributes}}">
                                <attributes:AnimationTimingProperties/>
                            </TabItem>
                            <TabItem Header="Value" Visibility="{Binding Converter={StaticResource TypeVisibilityConverter}, ConverterParameter={x:Type Svg:ISvgAnimationValueAttributes}}">
                                <attributes:AnimationValueProperties/>
                            </TabItem>
                        </TabControl>
                    </TabItem>
                </TabControl>
                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>
                <TabControl DataContext="{Binding ElementName=DocumentTree, Path=SelectedItem, UpdateSourceTrigger=PropertyChanged}" Grid.Column="2">
                    <TabItem Header="Attributes" Visibility="Visible">
                        <ListBox ItemsSource="{Binding Attributes}" Grid.IsSharedSizeScope="True" Margin="2">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition SharedSizeGroup="Key" />
                                            <ColumnDefinition SharedSizeGroup="Name" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Key}" Grid.Column="0" Margin="2" />
                                        <TextBlock Text="{Binding Value}" Grid.Column="1" Margin="2" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
